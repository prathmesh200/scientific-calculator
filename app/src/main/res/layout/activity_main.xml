<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/secound"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="47"
        android:background="#000"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:textAlignment="viewEnd"
        android:padding="19dp"
        android:layout_weight="0.3"
        android:maxLines="1"
        tools:ignore="RtlCompat">

    </TextView>

    <TextView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="47"
        android:background="#000"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:textAlignment="viewEnd"
        android:padding="19dp"
        android:layout_weight="1"
        android:maxLines="1"
        tools:ignore="RtlCompat">

    </TextView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/bac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#100303"
                        android:text="ac"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="30dp"
                        android:textStyle="bold|italic">

                    </Button>
                    <Button
                        android:id="@+id/bc"
                        android:text="c"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bb1"
                        android:text="("
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bb2"
                        android:text=")"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/bsin"
                        android:text="sin"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bcos"
                        android:text="cos"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/btan"
                        android:text="tan"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/blog"
                        android:text="log"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bIn"
                        android:text="In"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/bx1"
                        android:text="x!"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bx2"
                        android:text="x² "
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bx3"
                        android:text="√"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bx4"
                        android:text="1/x"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bx5"
                        android:text="÷"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b8"
                        android:text="8"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b9"
                        android:text="9"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bmul"
                        android:text="x"
                        android:textSize="25dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/b4"
                        android:text="4"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b5"
                        android:text="5"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b6"
                        android:text="6"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bsub"
                        android:text="-"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/b1"
                        android:text="1"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b2"
                        android:text="2"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b3"
                        android:text="3"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/badd"
                        android:text="+"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/bpi"
                        android:text="π"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF9800"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/b0"
                        android:text="0"
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>
                    <Button
                        android:id="@+id/bdot"
                        android:text="."
                        android:textSize="30dp"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#100303"
                        android:layout_weight="1"
                        >

                    </Button>

                    <Button
                        android:id="@+id/bequal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#100303"
                        android:text="="
                        android:textAllCaps="false"
                        android:textColor="#FF9800"
                        android:textSize="44sp"
                        android:textStyle="bold">

                    </Button>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>


